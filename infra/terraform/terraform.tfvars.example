# Copy this file to terraform.tfvars and fill in your values
# DO NOT commit terraform.tfvars to git!

aws_region    = "eu-central-1"
environment   = "prod"
app_name      = "starter"

# EC2 Spot Instance (t3.small = 2GB RAM, ~$4.50/month with Spot)
ec2_instance_type  = "t3.small"
ec2_spot_max_price = "0.015"    # Max price per hour (On-Demand = $0.0208)
ec2_key_name       = "your-key-pair-name"  # Must exist in AWS!

# Security - restrict SSH to your IP
allowed_ssh_cidr = "1.2.3.4/32"  # Your public IP

# Note: PostgreSQL runs in Docker on EC2 (no RDS needed)
# Email is handled via Resend (API key in GitHub Secrets: RESEND_API_KEY)
# Database credentials are managed via GitHub Secrets:
#   - DB_USER (default: postgres)
#   - DB_PASSWORD (your secure password)

